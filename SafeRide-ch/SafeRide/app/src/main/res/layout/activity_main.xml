<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.ssilance.saferide.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp">

        <Button
            android:id="@+id/driverLoginBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="211dp"
            android:text="DRIVER" />

        <Button
            android:id="@+id/riderLoginBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/driverLoginBtn"
            android:layout_below="@+id/driverLoginBtn"
            android:layout_marginTop="12dp"
            android:text="RIDER" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/riderLoginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="76dp"
            android:text="Safe Rider"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"

        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"

            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"


            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_rc6" />
    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
